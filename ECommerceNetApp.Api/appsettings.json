{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "OpenTelemetry": {
    "ServiceName": "ECommerceNetApp.Api",
    "ServiceVersion": "1.0.0",
    "TraceEnabled": true,
    "MetricsEnabled": true,
    "LogsEnabled": true
  },
  "ApplicationInsights": {
    "ConnectionString": ""
  },
  "Serilog": {
    "Using": [
      "Serilog.Sinks.Console",
      "Serilog.Sinks.File"
    ],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "Microsoft.Hosting.Lifetime": "Information",
        "System": "Warning",
        "OpenTelemetry": "Warning"
      }
    },
    "Enrich": [
      "FromLogContext",
      "WithMachineName",
      "WithExceptionDetails",
      "WithCorrelationId",
      "WithTraceId",
      "WithSpanId"
    ],
    "Properties": {
      "Application": "ECommerceNetApp.Api"
    },
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "outputTemplate": "[{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz} {TraceId} {SpanId} {CorrelationId} {Level:u3}] {Message:lj} {NewLine}{Exception}"
        }
      },
      {
        "Name": "File",
        "Args": {
          "path": "/logs/ECommerceNetApp.Api-.log",
          "rollingInterval": "Day",
          "retainedFileCountLimit": 7,
          "formatter": "Serilog.Formatting.Compact.CompactJsonFormatter, Serilog.Formatting.Compact"
        }
      }
    ]
  },
  "CartDbOptions": {
    "SeedSampleData": false
  },
  "ProductCatalogDbOptions": {
    "SeedSampleData": false,
    "EnableDatabaseMigration": true
  },
  "EventBus": {
    "Type": "InMemory",
    "Azure": {
      "ConnectionString": "",
      "TopicName": ""
    },
    "AWS": {
      "Region": "",
      "AccessKey": "",
      "SecretKey": "",
      "TopicName": "",
      "DeadLetterQueueArn": ""
    },
    "DefaultMessageTimeToLiveInDays": 14,
    "MaxConcurrentCalls": 10,
    "AutoCreateEntities": true
  },
  "ConnectionStrings": {
    "CartDb": "Filename=./Cart.db;Mode=Shared",
    "ProductCatalogDb": "Server=(localdb)\\mssqllocaldb;Database=ECommerceProductCatalogDb;Trusted_Connection=True;MultipleActiveResultSets=true"
  },
  "Jwt": {
    "SecretKey": "",
    "Issuer": "",
    "Audience": "",
    "ExpireHours": 0,
    "RefreshTokenExpirationHours": 0
  },
  "AllowedHosts": "*"
}
